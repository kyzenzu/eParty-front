<view class="container"><view class="info-card"><view class="avatar"><text>{{nameFirst}}</text></view><view class="info-content"><view class="name">{{userInfo.name+" "+userInfo.gender+" "+userInfo.nation}}</view><view class="student-id">{{"数媒"+userInfo.studentId}}</view><view class="progress"><text>当前进度：</text><text class="status">{{userInfo.status}}</text><view class="stars"><block wx:for="{{filledStars}}" wx:for-item="n" wx:for-index="__i0__"><text class="star filled">★</text></block><block wx:for="{{emptyStars}}" wx:for-item="n" wx:for-index="__i1__"><text class="star">☆</text></block></view></view></view></view><scroll-view class="navbar" scroll-x="{{true}}"><block wx:for="{{navBar}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view data-event-opts="{{[['tap',[['clickNav',[index]]]]]}}" class="nav-item" bindtap="__e"><view class="inner-box"><view class="{{['text',(index==currentTab)?'active':'']}}">{{item}}</view><view hidden="{{!(index==currentTab)}}" class="line"></view></view></view></block></scroll-view><swiper class="contents" style="{{'height:'+(swiperHeight)+';'}}" current="{{currentTab}}" data-event-opts="{{[['change',[['changeTab',['$event']]]]]}}" bindchange="__e"><block wx:for="{{contents}}" wx:for-item="content" wx:for-index="contentIdx" wx:key="contentIdx"><swiper-item class="swiper-item"><block wx:for="{{content}}" wx:for-item="item" wx:for-index="itemIdx" wx:key="itemIdx"><view class="row"><view class="file-item"><view class="file-info"><image class="file-icon" src="{{item.icon}}" mode="aspectFit"></image><view class="file-detail"><view class="file-name">{{item.name}}</view><view class="file-meta">{{item.date+" "+item.size}}</view></view></view><button class="{{['approve-btn',(item.status==='approved')?'approved':'']}}">{{''+(item.status==='approved'?'已审批':'审批')+''}}</button></view></view></block></swiper-item></block></swiper></view>