.container {
  width: 100%;
  height: 100%;
  position: fixed;
  background-color: #EFEFEF;
}
.profile-menu-box {
  width: 100%;
  height: 378rpx;
  /* 高度可根据需要调整 */
  padding: 37rpx 22.5rpx 0 22.5rpx;
  background: linear-gradient(to bottom, red 0%, red 75%, #EFEFEF 75%, #EFEFEF 100%);
  box-sizing: border-box;
}
.profile-menu-box .profile-menu {
  width: 100%;
  height: 341rpx;
  padding: 20rpx;
  box-sizing: border-box;
  background-color: white;
  border-radius: 10rpx;
}
.profile-menu-box .profile-menu .divider-box {
  padding: 0 20rpx;
}
.profile-menu-box .profile-menu .profile {
  background-color: #ffffff;
  display: flex;
  align-items: center;
  padding: 20rpx;
}
.profile-menu-box .profile-menu .profile .avatar image {
  width: 100rpx;
  height: 100rpx;
  border-radius: 50%;
}
.profile-menu-box .profile-menu .profile .info-arrow {
  width: 100%;
  display: flex;
  align-items: center;
  justify-content: space-between;
}
.profile-menu-box .profile-menu .profile .info-arrow .info {
  margin-left: 20rpx;
}
.profile-menu-box .profile-menu .profile .info-arrow .info .name {
  font-size: 32rpx;
  font-weight: bold;
}
.profile-menu-box .profile-menu .profile .info-arrow .info .progress {
  margin-top: 15rpx;
  font-size: 28rpx;
  color: #E42417;
}
.profile-menu-box .profile-menu .profile .info-arrow .info .stars {
  font-size: 24rpx;
  color: #ff9900;
}
.profile-menu-box .profile-menu .profile .info-arrow .arrow {
  color: #E42417;
  font-weight: bold;
}
.profile-menu-box .profile-menu .menu {
  display: flex;
  flex-wrap: wrap;
  background-color: #ffffff;
}
.profile-menu-box .profile-menu .menu .menu-item {
  width: 25%;
  display: flex;
  flex-direction: column;
  align-items: center;
  padding: 20rpx 0;
  font-size: 25rpx;
  font-weight: bold;
}
.profile-menu-box .profile-menu .menu .menu-item image {
  width: 85rpx;
  height: 85rpx;
  margin-bottom: 10rpx;
}
.navigation-box {
  background-color: #EFEFEF;
  padding: 20rpx;
}
.navigation-box .navigation {
  background-color: #fff;
  padding: 0;
  border-radius: 10rpx;
  padding: 18rpx 17rpx 0 31rpx;
}
.navigation-box .navigation .navigation-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 16rpx 0;
  font-size: 16px;
  color: #333;
}
.navigation-box .navigation .navigation-item.active {
  border-bottom: solid 4rpx #EFEFEF;
}
.navigation-box .navigation .navigation-item .arrow {
  color: black;
  font-size: 18px;
}

