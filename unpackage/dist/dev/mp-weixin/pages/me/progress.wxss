page {
  height: 100%;
  background-color: #F6F6F6;
}
.container .navbar {
  width: 100%;
  height: 81rpx;
  background-color: #FFF1F0;
  display: flex;
  justify-content: space-between;
  padding: 0 70rpx;
  box-sizing: border-box;
}
.container .navbar .nav-item {
  height: 100%;
  display: flex;
  flex-direction: column;
}
.container .navbar .nav-item .text {
  line-height: 75rpx;
  color: #E42417;
}
.container .navbar .nav-item .line {
  width: 60rpx;
  height: 6rpx;
  border-radius: 5rpx;
  background-color: #e42417;
}
.container .contents {
  background-color: #F6F6F6;
}
.container .contents .swiper-item {
  width: 100%;
  box-sizing: border-box;
  padding: 20rpx 27rpx;
}
.container .contents .swiper-item .row {
  box-shadow: 5rpx 5rpx 5rpx #888888;
}

