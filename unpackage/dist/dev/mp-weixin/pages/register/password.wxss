.container {
  padding: 75rpx 58rpx;
  background-color: #fff;
}
.title {
  font-size: 40rpx;
  font-weight: bold;
  color: #000;
}
.subtitle {
  font-size: 28rpx;
  color: #666;
  margin-top: 10rpx;
}
.input-container {
  width: 100%;
  margin-top: 50rpx;
}
.input-container .label {
  font-size: 30rpx;
  color: #333;
}
.input-container .password-input {
  display: flex;
  align-items: center;
  border-bottom: 1px solid #ddd;
  margin-top: 10rpx;
  padding-bottom: 10rpx;
  position: relative;
}
.input-container .password-input .input-field {
  flex: 1;
  font-size: 30rpx;
  padding: 10rpx 0;
}
.input-container .password-input .eye-icon {
  width: 35.6rpx;
  height: 16.6rpx;
  display: flex;
  align-items: center;
  justify-content: center;
}
.input-container .password-input .eye-icon image.eye-close {
  width: 35.6rpx;
  height: 16.6rpx;
}
.input-container .password-input .eye-icon image.eye-open {
  width: 43.8rpx;
  height: 31.6rpx;
}
.input-container .hint {
  font-size: 24rpx;
  color: #999;
  margin-top: 10rpx;
}
.submit-btn {
  width: 100%;
  height: 90rpx;
  background-color: #f56c6c;
  color: #fff;
  font-size: 32rpx;
  border-radius: 10rpx;
  margin-top: 60rpx;
}
.submit-btn.active {
  background-color: #E42417;
}

