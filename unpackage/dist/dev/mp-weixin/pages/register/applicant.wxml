<view class="container"><view class="section"><view class="section-header"><image src="/static/images/register/information/basic-info.png"></image><text>基本信息</text></view><view class="form-content"><block wx:for="{{basicInfo}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="form-item"><text class="{{['label',(item.required)?'required':'']}}">{{''+item.label+''}}</text><block wx:if="{{!item.isPicker}}"><input class="input" placeholder="{{'请输入'+item.label}}" placeholder-style="color:#767676" data-event-opts="{{[['input',[['__set_model',['$0','$1','$event',[]],['formData',[['basicInfo','',index,'key']]]]]]]}}" value="{{formData[item.key]}}" bindinput="__e"/></block><block wx:else><view class="picker-container"><picker class="picker" range="{{item.range}}" data-event-opts="{{[['change',[['handlePickerChange',['$event','$0'],[[['basicInfo','',index,'key']]]]]]]}}" bindchange="__e"><view class="picker-text">{{''+(formData[item.key]||'请选择'+item.label)+''}}</view></picker><text class="arrow">></text></view></block></view></block></view></view><view class="section"><view class="section-header"><image src="/static/images/register/information/work-experience.png"></image><text>教育经历</text></view><view class="form-content"><block wx:for="{{educationInfo}}" wx:for-item="item" wx:for-index="index" wx:key="index"><view class="form-item"><text class="label">{{item.label}}</text><view class="picker-container"><picker class="picker" mode="date" data-event-opts="{{[['change',[['handlePickerChange',['$event','$0'],[[['educationInfo','',index,'key']]]]]]]}}" bindchange="__e"><view class="picker-text">{{''+(formData[item.key]||'请选择'+item.label)+''}}</view></picker><text class="arrow">></text></view></view></block></view></view><view class="button-group"><view data-event-opts="{{[['tap',[['submit',['$event']]]]]}}" class="submit button" bindtap="__e">提交</view><view class="cancel button">取消</view></view></view>